@using Microsoft.AspNetCore.Identity
@using WebATB.Data.Entities.Idenity
@inject UserManager<UserEntity> UserManager
@{
    ViewData["Title"] = "Дашборд";
    var totalUsers = UserManager.Users.Count();
    var confirmedUsers = UserManager.Users.Count(u => u.EmailConfirmed);
}

<div class="row g-4 mb-4">
    <!-- Статистика користувачів -->
    <div class="col-md-4">
        <div class="stats-card border-start border-primary border-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Всього користувачів</h6>
                    <h2 class="mb-0 text-primary">@totalUsers</h2>
                </div>
                <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                    <i class="bi bi-people fs-1 text-primary"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="stats-card border-start border-success border-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Підтверджені акаунти</h6>
                    <h2 class="mb-0 text-success">@confirmedUsers</h2>
                </div>
                <div class="bg-success bg-opacity-10 rounded-circle p-3">
                    <i class="bi bi-check-circle fs-1 text-success"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="stats-card border-start border-warning border-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Неактивовані</h6>
                    <h2 class="mb-0 text-warning">@(totalUsers - confirmedUsers)</h2>
                </div>
                <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                    <i class="bi bi-exclamation-triangle fs-1 text-warning"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Швидкі дії -->
<div class="row g-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="bi bi-lightning-charge-fill me-2"></i>
                    Швидкі дії
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <a asp-area="Admin" asp-controller="Users" asp-action="Index"
                           class="btn btn-outline-primary w-100 py-3">
                            <i class="bi bi-people fs-4 d-block mb-2"></i>
                            <span>Управління користувачами</span>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-area="" asp-controller="Main" asp-action="Index"
                           class="btn btn-outline-success w-100 py-3">
                            <i class="bi bi-globe fs-4 d-block mb-2"></i>
                            <span>Перейти на сайт</span>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-area="" asp-controller="Main" asp-action="Index"
                           class="btn btn-outline-info w-100 py-3">
                            <i class="bi bi-box-seam fs-4 d-block mb-2"></i>
                            <span>Категорії товарів</span>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-area="" asp-controller="Products" asp-action="Index"
                           class="btn btn-outline-warning w-100 py-3">
                            <i class="bi bi-cart fs-4 d-block mb-2"></i>
                            <span>Продукти</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Інформація
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted d-block">Версія системи</small>
                    <strong>1.0.0</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block">Поточний адміністратор</small>
                    <strong>@User.Identity?.Name</strong>
                </div>
                <div>
                    <small class="text-muted d-block">Дата</small>
                    <strong>@DateTime.Now.ToString("dd.MM.yyyy HH:mm")</strong>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Вітальне повідомлення -->
<div class="alert alert-info mt-4">
    <h5 class="alert-heading">
        <i class="bi bi-hand-thumbs-up me-2"></i>
        Вітаємо в адмін панелі!
    </h5>
    <p class="mb-0">
        Тут ви можете керувати користувачами сайту, призначати ролі та переглядати статистику.
        Використовуйте меню зліва для навігації.
    </p>
</div>